doctype html
head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	title API Basejumps: FreeCodeCamp Projects
	link(rel='stylesheet', media='screen', href='/lib/bootstrap/dist/css/bootstrap.min.css')

body
	.container
		.header 
			h1 API Basejumps: FreeCodeCamp Projects
			h3 
				a(href = "http://www.freecodecamp.com/map#api-projects") Projects Map
		.panel.panel-default
			.panel-heading
				h3.panel-title Projects:
			ul.list-group
				li.list-group-item 
					h4
						a(href="http://#{host}/api/timestamp") Timestamp Microservice
					a(href="http://www.freecodecamp.com/challenges/basejump-timestamp-microservice") Project Page
					|	- 
					a(href="https://github.com/golle404/API-Basejump-Timestamp-microservice") code
				li.list-group-item 
					h4
						a(href="http://#{host}/api/headerparser") Request Header Parser Microservice
					a(href="http://www.freecodecamp.com/challenges/basejump-request-header-parser-microservice") Project Page
					|	- 
					a(href="https://github.com/golle404/Basejump-Request-Header-Parser-Microservice") code
				li.list-group-item 
					h4
						a(href="http://#{host}/api/shorturl") URL Shortener Microservice
					a(href="http://www.freecodecamp.com/challenges/basejump-url-shortener-microservice") Project Page
					|	- 
					a(href="https://github.com/golle404/Basejump-URL-Shortener-Microservice") code
				li.list-group-item 
					h4
						a(href="http://#{host}/api/imagesearch") Image Search Abstraction Layer
					a(href="http://www.freecodecamp.com/challenges/basejump-image-search-abstraction-layer") Project Page
					|	- 
					a(href="https://github.com/golle404/Basejump-Image-Search-Abstraction-Layer") code
				li.list-group-item 
					h4
						a(href="http://#{host}/api/fileanalyse") File Metadata Microservice
					a(href="http://www.freecodecamp.com/challenges/basejump-file-metadata-microservice") Project Page
					|	- 
					a(href="https://github.com/golle404/Basejump-File-Metadata-Microservice") code
				
			.panel-footer
				a(href="https://github.com/golle404/Basejumps-API-Projects") source
